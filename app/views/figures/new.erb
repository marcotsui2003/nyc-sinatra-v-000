<form method="post" action="/figures">
	Figure Name: <input id="figure_name" type="text" name="figure[name]"/><br>
	
	New Landmark:<br>
	<input id="new_landmark" type="text" name="landmark[name]"/><br>
	Existing Landmarks: <br>
	<% @landmarks.each do |landmark| %>
	<input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" /><br>
	<% end %>
	
	New Title:<br>
	<input id="new_title" type="text" name="title[name]"/><br>
	Existing Titles: <br>
	<% @titles.each do |title| %>
	<input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" /><br>
	<% end %>

	<button type="submit">Create New Figure</button>
</form>